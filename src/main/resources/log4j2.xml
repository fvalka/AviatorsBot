<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="com.codahale.metrics.log4j2">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %c{1.} [%t] %replace{%msg}{\r?\n}{↵}%n"/>
        </Console>

        <RollingFile name="RollingFileGeneral"
                     append="true"
                     fileName="logs/aviatorsbot.log"
                     filePattern="logs/aviatorsbot-%d{yyyy-MM-dd}-%i.log.gz"
                     filePermissions="rw-------">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %replace{%msg}{\r?\n}{↵}%n</Pattern>
            </PatternLayout>
            <Policies>
                <CronTriggeringPolicy schedule="0 0 0 ? * SUN"/>
                <SizeBasedTriggeringPolicy size="512 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileTrafficLog"
                     append="true"
                     fileName="logs/traffic.log"
                     filePattern="logs/traffic-%d{yyyy-MM-dd}-%i.log.gz"
                     filePermissions="rw-------">
            <PatternLayout>
                <Pattern>%d %replace{%msg}{\r?\n}{↵}%n</Pattern>
            </PatternLayout>
            <Policies>
                <CronTriggeringPolicy schedule="0 0 0 ? * SUN"/>
                <SizeBasedTriggeringPolicy size="512 MB"/>
            </Policies>
        </RollingFile>

        <Gelf name="gelf" host="udp:graylog-udp.logging.svc.cluster.local" port="12222" version="1.1" extractStackTrace="true"
              mdcProfiling="true" includeFullMdc="true" maximumMessageSize="8192"
              originHost="%host{fqdn}" additionalFieldTypes="type=String">
            <Field name="timestamp" pattern="%d{dd MMM yyyy HH:mm:ss,SSS}" />
            <Field name="level" pattern="%level" />
            <Field name="simpleClassName" pattern="%C{1}" />
            <Field name="className" pattern="%C" />
            <Field name="server" pattern="%host" />
            <Field name="server.fqdn" pattern="%host{fqdn}" />

            <!-- This is a static field -->
            <Field name="type" literal="normal" />
        </Gelf>

        <Gelf name="traffic-gelf" host="udp:graylog-udp.logging.svc.cluster.local" port="12222" version="1.1" extractStackTrace="false"
              mdcProfiling="true" includeFullMdc="true" maximumMessageSize="8192"
              originHost="%host{fqdn}" additionalFieldTypes="type=String">
            <Field name="timestamp" pattern="%d{dd MMM yyyy HH:mm:ss,SSS}" />
            <Field name="level" pattern="%level" />
            <Field name="server" pattern="%host" />
            <Field name="server.fqdn" pattern="%host{fqdn}" />

            <!-- This is a static field -->
            <Field name="type" literal="traffic" />
        </Gelf>

        <MetricsAppender name="Metrics" registryName="default"/>
    </Appenders>
    <Loggers>
        <Logger name="traffic-log" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileTrafficLog"/>
            <AppenderRef ref="traffic-gelf"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileGeneral"/>
            <AppenderRef ref="gelf"/>
            <AppenderRef ref="Metrics" />
        </Root>
    </Loggers>
</Configuration>